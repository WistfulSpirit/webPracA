@model webPracA.Models.ExamPlan

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Вы действительно хотите удалить эту группу?</h3>
<div>
    <h4>ExamPlan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер группы
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Group.Number)
        </dd>

        <dt>
            Предмет
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lesson.Name)
        </dd>

        <dt>
            Преподаватель
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.Name)
        </dd>

        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExamDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Обратно к списку", "Index")
        </div>
    }
</div>
