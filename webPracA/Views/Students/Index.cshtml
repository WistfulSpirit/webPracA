@model IEnumerable<webPracA.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Список студентов группы - @ViewBag.GRNUM</h2>

<p>
    @Html.ActionLink("Добавить нового", "Create", new { gId = ViewBag.gId})
</p>
<table class="table">
    <tr>
        <th>
            ФИО
        </th>
        <th>
            Номер группы
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Number)
            </td>
            <td>
                @if (User.Identity.Name == "admin")
                {
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })<span> | </span>
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })<span> | </span>
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" style="text-align:center">Нет результатов</td>
            <td></td>
        </tr>
    }

</table>
