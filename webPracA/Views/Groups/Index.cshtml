@model IEnumerable<webPracA.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Список групп</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table class="table">
    <tr>
        <th>Номер</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.ActionLink("Список студентов", "Index", "Students", new { gId = item.Id }, null)
            </td>  
            <td>
                @Html.ActionLink("Успеваемость", "MarkRecords", "Students", new { gId = item.Id }, null)
            </td>
            <td>
                @if (User.Identity.Name == "admin")
                {
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id })<span> | </span>
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })<span> | </span>
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6" style="text-align:center">Нет результатов</td>
            <td></td>
        </tr>
    }

</table>
